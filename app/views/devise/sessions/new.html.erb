<div class="devise-wrapper">
  <div class="devise-container">
    <div class="devise-container-left">
      <h2>Connexion</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :password, "Mot de passe" %><br />
          <%= f.password_field :password, autocomplete: "current-password" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field devise-checkbox">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, "Souvenez-vous de moi" %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "Je me connecte" %>
        </div>
      <% end %>

      <div class="devise-links">
        <%= render "devise/shared/links" %>
      </div>
    </div>
    <div class="devise-container-right">
      <%= image_tag("authentication.svg") %>
    </div>
  </div>
</div>
