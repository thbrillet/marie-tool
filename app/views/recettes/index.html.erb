  <div class="tapbar-container">
    <div style="display: flex">
      <a href="tel:0770030540" style="margin-right: 10px;"><i class="fas fa-phone icon-sm"></i></a>
      <a href="mailto:mariearnaud.am@gmail.com"><i class="far fa-envelope icon-sm"></i></a>
    </div>
    <button id="btn-to-cart--mobile"><i class="fas fa-shopping-cart icon-blanc icon-sm"></i> Voir mon panier</button>
  </div>
